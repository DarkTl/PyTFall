{
  "$schema": "http://json-schema.org/draft-04/schema",
  "additionalProperties": false,
  "properties": {
    "add_be_spells": {
      "items": { "$ref": "#/definitions/magic" },
      "type": "array"
    },
    "addeffects": {
      "items": { "type": "string" },
      "type": "array"
    },
    "addtraits": {
      "items": { "type": "string" },
      "type": "array"
    },
    "attacks": {
      "items": { "type": "string" },
      "type": "array"
    },
    "badness": { "type": "number", "min": 0, "max": 100},
    "badtraits": { "type": "array" },
    "cblock": { "type": "number" },
    "ceffect": { "type": "string" },
    "ch_multiplier": { "type": "number" },
    "chance": { "type": "number" },
    "ctemp": { "type": "number" },
    "damage_multiplier": { "type": "number" },
    "defence_bonus": { "$ref": "#/definitions/defenceValue" },
    "defence_multiplier": { "$ref": "#/definitions/defenceValue" },
    "delivery_bonus": { "$ref": "#/definitions/defenceValue" },
    "delivery_multiplier": { "$ref": "#/definitions/defenceValue" },
    "desc": { "type": "string" },
    "dismod": { "type": "number" },
    "eqchance": { "type": "number" },
    "evasion_bonus": { "type": "number" },
    "goodrait": {
      "items": { "type": "string" },
      "type": "array"
    },
    "goodtraits": { "type": "array" },
    "hidden": { "type": "boolean" },
    "icon": { "type": "string" },
    "id": { "type": "string" },
    "infinite": { "type": "boolean" },
    "jump_to_label": { "type": "string" },
    "locations": {
      "items": { "$ref": "#/definitions/locations" },
      "type": "array"
    },
    "max": { "$ref": "#/definitions/statValue" },
    "mdestruct": { "type": "boolean" },
    "min": { "$ref": "#/definitions/statValue" },
    "mod": { "$ref": "#/definitions/statValue" },
    "mod_skills": {
      "allOf": [
        { "$ref": "#/definitions/skillObject" },
        { "$ref": "#/definitions/objectWithNumArrayOf5" }
      ]
    },
    "mreusable": { "type": "boolean" },
    "mtemp": { "type": "number" },
    "price": { "type": "number" },
    "removeeffects": {
      "items": { "type": "string" },
      "type": "array"
    },
    "removetraits": { "type": "array" },
    "sex": { "enum": ["male", "female", "unisex"] },
    "skillmax": { "type": "number" },
    "slot": { "enum": ["body", "wrist", "weapon", "smallweapon", "resources",
        "ring", "misc", "loot", "head", "feet", "consumable", "cape", "amulet"] },
    "statmax": { "type": "number" },
    "type": { "type": "string" }
  },
  "required": [
    "chance",
    "icon",
    "id",
    "price",
    "slot",
    "desc"
  ],
  "type": "object"
}
