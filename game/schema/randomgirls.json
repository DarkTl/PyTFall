{
  "$schema": "http://json-schema.org/draft-04/schema",
  "additionalProperties": false,
  "properties": {
    "ab_traits": { "type": "array" },
    "base_race": { "type": "string" },
    "battle_skills": { "type": "string" },
    "blocked_traits": { "type": "array" },
    "desc": { "type": "string" },
    "elements": {
      "additionalProperties": false,
      "properties": {
        "Air 1": { "type": "number" },
        "Darkness 1": { "type": "number" },
        "Earth 1": { "type": "number" },
        "Fire 1": { "type": "number" },
        "Light 1": { "type": "number" },
        "Light 2": { "type": "number" },
        "Light 3": { "type": "number" },
        "Water 1": { "type": "number" }
      },
      "type": "object"
    },
    "force_location": { "type": "boolean" },
    "force_status": { "type": "boolean" },
    "height": { "$ref": "#/definitions/height" },
    "id": { "type": "string" },
    "magic_skills": { "type": "array" },
    "occupations": { "items": { "$ref": "#/definitions/occupations" }, "type": "array" },
    "race": { "type": "string" },
    "random_stats": {
      "allOf": [
        { "$ref": "#/definitions/statObject" },
        { "additionalProperties": {
            "items": { "type": "number" },
            "type": "array"
          },
          "required": [
            "character",
            "charisma",
            "intelligence",
            "constitution"
          ],
          "type": "object"
        }
      ]
    },
    "random_traits": {
      "items": {
        "items": [
          { "type": "string" },
          { "type": "number" }
        ],
        "type": "array"
      },
      "type": "array"
    }
  },
  "required": [
    "desc",
    "force_status",
    "id",
    "magic_skills",
    "occupations",
    "random_stats",
    "random_traits",
    "force_location"
  ],
  "type": "object"
}
