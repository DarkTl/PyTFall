{
  "$schema": "http://json-schema.org/draft-04/schema",
  "additionalProperties": false,
  "definitions": {

    "stat": {
      "additionalProperties": false,
      "properties": {
        "agility": {},
        "attack": {},
        "character": {},
        "charisma": {},
        "constitution": {},
        "disposition": {},
        "defence": {},
        "health": {},
        "intelligence": {},
        "luck": {},
        "magic": {},
        "mp": {},
        "upkeep": {},
        "vitality": {}
      },
      "type": "object"
    },
    "skill": {
      "additionalProperties": false,
      "properties": {
        "anal": {},
        "bartending": {},
        "bdsm": {},
        "cleaning": {},
        "dancing": {},
        "exploration": {},
        "group": {},
        "management": {},
        "oral": {},
        "refinement": {},
        "service": {},
        "sex": {},
        "strip": {},
        "teaching": {},
        "vaginal": {},
        "waiting": {}
      },
      "type": "object"
    },
    "element": {
      "additionalProperties": false,
      "properties": {
        "air": {},
        "darkness": {},
        "earth": {},
        "electricity": {},
        "fire": {},
        "healing": {},
        "ice": {},
        "light": {},
        "physical": {},
        "poison": {},
        "water": {},
        "wind": {}
      },
      "type": "object"
    },
    "defence": {
      "additionalProperties": false,
      "properties": {
        "magic": {},
        "melee": {},
        "ranged": {},
        "status": {}
      },
      "type": "object"
    },

    "objectWithNumericType": {
      "type": "object",
      "properties": {},
      "additionalProperties": { "type": "number" }
    },
    "numericArrayOf3": {
      "type": "array",
      "minItems": 3,
      "maxItems": 3,
      "items": { "type": "number" }
    },
    "numericArrayOf2": {
      "type": "array",
      "minItems": 2,
      "maxItems": 2,
      "items": { "type": "number" }
    },
    "objectWithNumArrayOf3": {
      "type": "object",
      "properties": {},
      "additionalProperties": { "$ref": "#/definitions/numericArrayOf3" }
    },
    "objectWithNumArrayOf2": {
      "type": "object",
      "properties": {},
      "additionalProperties": { "$ref": "#/definitions/numericArrayOf2" }
    },

    "statValue": {
      "allOf": [
        { "$ref": "#/definitions/stat" },
        { "$ref": "#/definitions/objectWithNumericType" }
      ],
      "type": "object"
    },
    "elementValue": {
      "allOf": [
        { "$ref": "#/definitions/element" },
        { "$ref": "#/definitions/objectWithNumericType" }
      ],
      "type": "object"
    },
    "defenceValue": {
      "allOf": [
        { "$ref": "#/definitions/defence" },
        { "$ref": "#/definitions/objectWithNumericType" }
      ],
      "type": "object"
    }
  },

  "properties": {
    "defence_bonus": {
      "allOf": [
        { "$ref": "#/definitions/defence" },
        { "$ref": "#/definitions/objectWithNumArrayOf3" }
      ]
    },
    "mod_skills": {
      "allOf": [
        { "$ref": "#/definitions/skill" },
        { "$ref": "#/definitions/objectWithNumArrayOf3" }
      ]
    },
    "mod_stats": {
      "allOf": [
        { "$ref": "#/definitions/stat" },
        { "$ref": "#/definitions/objectWithNumArrayOf3" }
      ]
    },

    "init_skills": {
      "allOf": [
        { "$ref": "#/definitions/skill" },
        { "$ref": "#/definitions/objectWithNumArrayOf2" }
      ]
    },
    "leveling_stats": {
      "allOf": [
        { "$ref": "#/definitions/stat" },
        { "$ref": "#/definitions/objectWithNumArrayOf2" }
      ]
    },

    "MC_only_trait": { "type": "boolean" },
    "basetrait": { "type": "boolean" },
    "blocks": {
      "items": { "type": "string" },
      "type": "array"
    },
    "body": { "type": "boolean" },
    "breasts": { "type": "boolean" },
    "ch_multiplier": { "type": "number" },
    "character_trait": { "type": "boolean" },
    "client": { "type": "boolean" },
    "damage_multiplier": { "type": "number" },

    "defence_multiplier": { "$ref": "#/definitions/defenceValue" },
    "delivery_multiplier": { "$ref": "#/definitions/defenceValue" },
    "desc": { "type": "string" },
    "effects": {
      "items": { "type": "string" },
      "type": "array"
    },
    "el_absorbs": { "$ref": "#/definitions/elementValue" },
    "el_damage": { "$ref": "#/definitions/elementValue" },
    "el_defence": { "$ref": "#/definitions/elementValue" },
    "elemental": { "type": "boolean" },
    "evasion_bonus": { "$ref": "#/definitions/numericArrayOf3" },
    "font_color": { "type": "string" },
    "higher_tiers": {
      "items": { "type": "string" },
      "type": "array"
    },
    "icon": { "type": "string" },
    "id": { "type": "string" },
    "init_lvlmax": { "$ref": "#/definitions/statValue" },
    "init_max": { "$ref": "#/definitions/statValue" },
    "init_mod": { "$ref": "#/definitions/statValue" },
    "max": { "$ref": "#/definitions/statValue" },
    "min": { "$ref": "#/definitions/statValue" },
    "mob_only": { "type": "boolean" },
    "mod": { "$ref": "#/definitions/statValue" },
    "mod_ap": { "type": "number" },
    "occupations": {
      "items": {
          "enum": ["SIW", "Server", "Warrior", "Caster", "Specialist"]
      },
      "type": "array"
    },
    "permanent": { "type": "boolean" },
    "personality": { "type": "boolean" },
    "race": { "type": "boolean" },
    "resist": {
      "items": {
          "enum": [ "air", "darkness", "earth", "electricity", "fire",
              "healing", "ice", "light", "physical", "poison", "water",
              "wind" ]
      },
      "type": "array"
    },
    "sexual": { "type": "boolean" },
    "trEffMax": { "type": "number" },
    "type": { "type": "string" },
    "virginity": { "type": "boolean" }
  },
  "required": [
    "id"
  ],
  "type": "object"
}
